{
  "name": "l2beat",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^14.0.0",
    "yarn": ">=1.22.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "format": "wsrun -ecsm format",
    "format:fix": "wsrun -ecsm format:fix",
    "lint": "wsrun -ecsm lint",
    "lint:fix": "wsrun -ecsm lint:fix",
    "typecheck": "wsrun -ecsm typecheck",
    "test": "wsrun -ecsm test",
    "build": "wsrun -ecsm build",
    "build:mock": "MOCK_DATA=true yarn build",
    "ci:check": "yarn build:mock && yarn format && yarn lint && yarn typecheck && yarn test",
    "fix": "yarn lint:fix && yarn format:fix"
  },
  "devDependencies": {
    "@sinonjs/fake-timers": "^7.1.2",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "earljs": "^0.2.0",
    "esbuild": "^0.14.11",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "mocha": "^9.1.4",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3",
    "wait-for-expect": "^3.0.2",
    "wsrun": "^5.2.4"
  }
}
