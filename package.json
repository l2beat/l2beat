{
  "name": "l2beat",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^16.0.0",
    "yarn": ">=1.22.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "format": "wsrun -ecsm format",
    "format:fix": "wsrun -ecsm format:fix",
    "lint": "wsrun -ecsm lint",
    "lint:fix": "wsrun -ecsm lint:fix",
    "typecheck": "wsrun -ecsm typecheck",
    "test": "wsrun -ecsm test",
    "build": "wsrun -ecsm build",
    "build:frontend": "wsrun -p @l2beat/frontend -recsm build",
    "heroku-postbuild": "wsrun -p @l2beat/backend -x @l2beat/backend -recsm build",
    "start": "cd packages/backend && yarn start",
    "build:mock": "MOCK_DATA=true yarn build",
    "ci:check": "yarn clean && yarn build:mock && yarn format && yarn lint && yarn typecheck && yarn test",
    "fix": "yarn lint:fix && yarn format:fix",
    "clean": "wsrun -ecsm clean"
  },
  "devDependencies": {
    "@sinonjs/fake-timers": "^9.1.2",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.41",
    "@types/sinonjs__fake-timers": "^8.1.2",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "earljs": "^0.2.3",
    "esbuild": "^0.14.43",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.17.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "typescript": "^4.7.3",
    "wait-for-expect": "^3.0.2",
    "wsrun": "^5.2.4"
  }
}
