{
  "$id": "https://l2beat.com/meta.schema.json",
  "title": "Discovery meta information",
  "description": "File with additional information about interpreting project state.",
  "required": ["contracts"],
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "contracts": {
      "type": "array",
      "items": { "$ref": "#/$defs/contract" }
    }
  },
  "unevaluatedProperties": false,
  "$defs": {
    "contract": {
      "type": "object",
      "required": ["name", "values"],
      "properties": {
        "name": { "type": "string" },
        "description": { "type": ["string", "null"]},
        "values": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/review" }
        }
      }
    },
    "review": {
      "type": "object",
      "required": ["description", "severity", "type"],
      "properties": {
        "description": { "type": ["string", "null"] },
        "severity": {
          "type": ["string", "null"],
          "enum": ["LOW", "MEDIUM", "HIGH", null]
        },
        "type": {
          "anyOf": [
            { "$ref": "#/$defs/valueType" },
            {
              "type": "array",
              "items": { "$ref": "#/$defs/valueType" }
            }
          ]
        }
      }
    },
    "valueType": {
      "type": ["string", "null"],
      "enum": [
        "STRUCTURE",
        "L2",
        "EXTERNAL",
        "RISK_PARAMETER",
        "PERMISSION",
        null
      ]
    }
  }
}
