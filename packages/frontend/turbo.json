{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "rewrite:build": {
      "dependsOn": ["^build"]
    },
    "build": {
      "env": [
        "CI",
        "CRON_SECRET",
        "DATABASE_URL",
        "EXCLUDED_TVS_PROJECTS",
        "EXCLUDED_ACTIVITY_PROJECTS",
        "ETHEREUM_RPC_URL",
        "FEATURE_FLAG_GITCOIN_OPTION",
        "FEATURE_FLAG_HIRING",
        "MOCK",
        "NODE_ENV",
        "NEXT_RUNTIME",
        "PORT",
        "REWRITE",
        "SENTRY_AUTH_TOKEN",
        "SKIP_ENV_VALIDATION",
        "TINIFY_API_KEY",
        "VERCEL_GIT_COMMIT_REF",
        "VERCEL_GIT_COMMIT_SHA",
        "VERCEL_ENV",
        "VERCEL_URL"
      ]
    }
  }
}
