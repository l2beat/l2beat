{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "extends": ["../../biome.json"],
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "noBlankTarget": "error"
      },
      "complexity": {
        "noUselessFragments": "error"
      },
      "correctness": {
        "useHookAtTopLevel": "error",
        "noChildrenProp": "error",
        "noVoidElementsWithChildren": "error"
      },
      "suspicious": {
        "noDuplicateJsxProps": "error"
      },
      "style": {
        "useFragmentSyntax": "error"
      }
    }
  },
  "files": {
    "ignore": ["./static"]
  }
}
