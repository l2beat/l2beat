{
  "extends": "@l2beat/typescript-config/nextjs",
  "compilerOptions": {
    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "react": ["./node_modules/@types/react"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
