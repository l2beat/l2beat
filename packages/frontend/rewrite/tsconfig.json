{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "noEmit": false,
    "outDir": "dist",
    "paths": {
      "~/*": ["./src/*"],
      "next/navigation": ["./src/_next/navigation"],
      "next/image": ["./src/_next/image"],
      "next/link": ["./src/_next/link"]
    }
  },
  "exclude": ["dist", "static"]
}
