{
  "name": "@l2beat/backend",
  "version": "0.1.0",
  "private": true,
  "main": "./build/data.json",
  "types": "./index.d.ts",
  "scripts": {
    "build": "./scripts/build.sh",
    "build:dependencies": "cd ../.. && pnpm build:dependencies",
    "build:config": "cd ../config && pnpm build",
    "clean": "rm -rf build",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "invert": "discovery invert",
    "lint": "biome check --formatter-enabled=false .",
    "lint:fix": "biome check --formatter-enabled=false --write .",
    "db:migrate": "cd ../database && pnpm db:migrate",
    "run-kroma-propose-script": "ts-node ./discovery/kroma/ethereum/script-ts/propose.ts",
    "start": "node -r source-map-support/register build/src/index.js",
    "start:dev": "pnpm build:dependencies && source .env && PRISMA_DB_URL=$LOCAL_DB_URL pnpm db:migrate && ts-node-dev --respawn --transpile-only src/index.ts",
    "start:profile": "node --inspect -r esbuild-register src/index.ts",
    "test": "./scripts/run_tests.sh",
    "test:config": "mocha --config .mocharc-smoke.json",
    "typecheck": "tsc --noEmit",
    "refresh-discovery": "ts-node --transpile-only scripts/refreshDiscovery.ts",
    "starkware-multiplier": "ts-node --transpile-only scripts/starkwareMultiplier.ts",
    "analyze-project": "ts-node --transpile-only scripts/analyzeProject.ts",
    "discover-tokens": "node -r esbuild-register scripts/discover-tokens",
    "db:inspect": "pnpm prisma studio",
    "dev": "pnpm build:dependencies && pnpm start:dev",
    "tvs:generate": "pnpm build:config && ts-node ./scripts/tvs/generate-config.ts",
    "tvs:execute": "pnpm build:config && ts-node ./scripts/tvs/execute.ts",
    "tvs:calculate-ids": "ts-node ./scripts/tvs/calculate-ids.ts",
    "tvs:translate-id": "ts-node ./scripts/tvs/translate-id.ts",
    "anomalies": "ts-node ./scripts/anomalies/anomalies.ts",
    "bridges:cli": "ts-node ./scripts/bridges/cli.ts",
    "bridges:cli-stats": "ts-node ./scripts/bridges/cli-stats.ts"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.13.1",
    "@google-cloud/bigquery": "^7.3.0",
    "@koa/router": "^12.0.0",
    "@l2beat/backend-tools": "workspace:*",
    "@l2beat/config": "workspace:*",
    "@l2beat/database": "workspace:*",
    "@l2beat/discovery": "workspace:*",
    "@l2beat/shared": "workspace:*",
    "@l2beat/shared-pure": "workspace:*",
    "@l2beat/uif": "workspace:*",
    "@l2beat/validate": "workspace:*",
    "@polkadot/api": "^12.4.2",
    "@types/ws": "^8.18.1",
    "basic-auth": "^2.0.1",
    "chalk": "^4.1.2",
    "discord.js": "^14.21.0",
    "elastic-apm-node": "^4.11.2",
    "ethers": "^5.7.2",
    "koa": "^2.14.1",
    "koa-compress": "^5.1.1",
    "koa-conditional-get": "^3.0.0",
    "koa-etag": "^4.0.0",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.7",
    "prom-client": "^14.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "redis": "^4.7.0",
    "source-map-support": "^0.5.21",
    "stream-chain": "^2.2.5",
    "stream-json": "^1.8.0",
    "uuid": "^9.0.1",
    "viem": "^2.31.6",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@l2beat/typescript-config": "workspace:*",
    "@types/basic-auth": "^1.1.3",
    "@types/koa": "^2.13.5",
    "@types/koa-compress": "^4.0.6",
    "@types/koa-conditional-get": "^2.0.0",
    "@types/koa-etag": "^3.0.0",
    "@types/koa__router": "^12.0.0",
    "@types/lodash": "^4.14.191",
    "@types/node-fetch": "^2.6.2",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/stream-chain": "^2.1.0",
    "@types/stream-json": "^1.7.7",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.8",
    "cmd-ts": "^0.13.0",
    "supertest": "^6.2.3",
    "ts-node-dev": "^2.0.0"
  }
}
