{
  "name": "@l2beat/backend",
  "version": "0.1.0",
  "private": true,
  "main": "./build/data.json",
  "types": "./index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:dependencies": "cd ../.. && yarn build:dependencies",
    "clean": "rm -rf build",
    "discover": "./scripts/discoverAndAddHistory.sh",
    "discover:raw": "discovery discover",
    "discover:dev": "cd ../discovery && yarn build && cd - && yarn discover --dev",
    "discover:single": "discovery single-discovery",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "invert": "discovery invert",
    "lint": "biome check --formatter-enabled=false .",
    "lint:fix": "biome check --formatter-enabled=false --apply .",
    "run-kroma-propose-script": "ts-node ./discovery/kroma/ethereum/script-ts/propose.ts",
    "start": "node -r source-map-support/register build/src/index.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start:profile": "node --inspect -r esbuild-register src/index.ts",
    "test": "mocha --timeout 10000",
    "typecheck": "tsc --noEmit",
    "find-common-contracts": "ts-node --transpile-only scripts/findCommonContracts.ts",
    "update-diff-history": "ts-node --transpile-only scripts/updateDiffHistory.ts",
    "powerdiff": "ts-node --transpile-only scripts/powerdiff.ts",
    "compare-orbit-chains": "ts-node --transpile-only scripts/compareOrbitChains.ts",
    "compare-opstack-chains": "ts-node --transpile-only scripts/compareOpStackChains.ts",
    "compare-flat-sources": "ts-node --transpile-only scripts/compare-flat/index.ts"
  },
  "dependencies": {
    "@bugsnag/js": "^7.22.3",
    "@bugsnag/plugin-koa": "^7.19.0",
    "@google-cloud/bigquery": "^7.3.0",
    "@koa/router": "^12.0.0",
    "@l2beat/backend-tools": "*",
    "@l2beat/config": "*",
    "@l2beat/database": "*",
    "@l2beat/discovery": "*",
    "@l2beat/discovery-types": "*",
    "@l2beat/shared": "*",
    "@l2beat/shared-pure": "*",
    "@l2beat/uif": "*",
    "@types/koa-compress": "^4.0.6",
    "@types/readline-sync": "^1.4.8",
    "ansi-to-html": "^0.7.2",
    "basic-auth": "^2.0.1",
    "chalk": "^4.1.2",
    "deep-diff": "^1.0.2",
    "ethers": "^5.7.2",
    "jsonc-parser": "^3.2.0",
    "knex": "^2.4.2",
    "koa": "^2.14.1",
    "koa-compress": "^5.1.1",
    "koa-conditional-get": "^3.0.0",
    "koa-etag": "^4.0.0",
    "lodash": "^4.17.21",
    "mkdirp": "^3.0.0",
    "node-fetch": "^2.6.7",
    "pg": "^8.8.0",
    "prom-client": "^14.1.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "readline-sync": "^1.4.10",
    "rimraf": "^5.0.0",
    "source-map-support": "^0.5.21",
    "stream-json": "^1.8.0",
    "twitter-api-v2": "^1.14.0",
    "viem": "^2.8.14",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/basic-auth": "^1.1.3",
    "@types/deep-diff": "^1.0.2",
    "@types/koa": "^2.13.5",
    "@types/koa-conditional-get": "^2.0.0",
    "@types/koa-etag": "^3.0.0",
    "@types/koa__router": "^12.0.0",
    "@types/lodash": "^4.14.191",
    "@types/node-fetch": "^2.6.2",
    "@types/pg": "8.6.5",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@types/stream-json": "^1.7.7",
    "@types/supertest": "^2.0.12",
    "comment-json": "^4.2.3",
    "supertest": "^6.2.3",
    "ts-node-dev": "^2.0.0"
  }
}
