{
  "name": "@l2beat/l2b",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "l2b": "./cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:dependencies": "cd ../.. && yarn build:dependencies",
    "l2bup": "yarn build:dependencies && yarn build && npm install -g .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint:fix": "biome check --formatter-enabled=false --write .",
    "lint": "biome check --formatter-enabled=false .",
    "test": "mocha"
  },
  "dependencies": {
    "@l2beat/backend-tools": "*",
    "@l2beat/config": "*",
    "@l2beat/discovery-types": "*",
    "@l2beat/protocolbeat": "*",
    "@l2beat/shared": "*",
    "@l2beat/shared-pure": "*",
    "@mradomski/fast-solidity-parser": "0.1.1",
    "@types/express": "^5.0.0",
    "chalk": "^4.1.2",
    "cmd-ts": "^0.13.0",
    "ethers": "^5.7.2",
    "express": "^4.21.1",
    "graphviz-wasm": "^3.0.2",
    "viem": "^2.18.6"
  },
  "devDependencies": {
    "@types/mock-fs": "^4.13.4",
    "mock-fs": "^5.2.0"
  }
}
