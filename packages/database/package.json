{
  "name": "@l2beat/database",
  "private": true,
  "version": "0.0.0",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./src/index.ts"
    },
    "./enums": {
      "import": "./dist/kysely/generated/enums.js",
      "types": "./src/kysely/generated/enums.ts"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc -p tsconfig.build.json",
    "db:generate-types": "prisma generate",
    "db:create-migration": "prisma migrate dev --create-only --name",
    "db:migrate": "prisma migrate deploy",
    "format": "prisma format && biome format .",
    "format:fix": "prisma format && biome format --write .",
    "lint:fix": "biome check --formatter-enabled=false --write .",
    "lint": "biome check --formatter-enabled=false .",
    "test": "./scripts/run_tests.sh",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@l2beat/discovery": "*",
    "@l2beat/shared": "*",
    "@l2beat/shared-pure": "*",
    "kysely": "^0.27.3",
    "nanoid": "^3.3.7"
  },
  "devDependencies": {
    "prisma": "^5.15.0",
    "prisma-kysely": "^1.8.0",
    "type-fest": "^4.20.0"
  }
}
