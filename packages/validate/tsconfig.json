{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,

    "strict": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "skipLibCheck": true,

    "outDir": "dist/esm"
  },
  "exclude": ["dist"]
}
