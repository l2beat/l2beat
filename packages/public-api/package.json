{
  "name": "@l2beat/public-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "build:dependencies": "cd ../.. && pnpm build:dependencies:public-api",
    "clean": "rm -rf build",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint": "biome check --formatter-enabled=false .",
    "lint:fix": "biome check --formatter-enabled=false --write .",
    "start": "node build/index.js",
    "dev": "node -r esbuild-register --watch src/index.ts",
    "test": "mocha",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@l2beat/backend-tools": "workspace:*",
    "@l2beat/database": "workspace:*",
    "@l2beat/dal": "workspace:*",
    "@l2beat/validate": "workspace:*",
    "es-toolkit": "^1.44.0",
    "express": "^5.0.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@l2beat/config": "workspace:*",
    "@l2beat/shared-pure": "workspace:*",
    "@l2beat/typescript-config": "workspace:*",
    "@types/express": "^5.0.0",
    "@types/swagger-ui-express": "^4.1.8"
  }
}
