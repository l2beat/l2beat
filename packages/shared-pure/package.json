{
  "name": "@l2beat/shared-pure",
  "version": "0.1.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "main": "./build/cjs/index.js",
  "module": "./build/esm/index.js",
  "exports": {
    ".": {
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.js"
    }
  },
  "scripts": {
    "build": "pnpm run clean && pnpm run build:esm && pnpm run build:cjs",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && cp cjs-package.json build/cjs/package.json",
    "clean": "rm -rf build",
    "format:fix": "biome format --write .",
    "format": "biome format .",
    "lint:fix": "biome check --formatter-enabled=false --write .",
    "lint": "biome check --formatter-enabled=false .",
    "test": "mocha",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@l2beat/validate": "workspace:*",
    "@mradomski/tinyerc55": "^0.1.3",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@l2beat/typescript-config": "workspace:*"
  }
}
