{
  "$id": "https://l2beat.com/metaContract.schema.json",
  "title": "Discovery meta information",
  "description": "Schema for meta of a single contract",
  "type": "object",
  "unevaluatedProperties": false,
  "required": ["name"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "extends": { "type": ["string"] },
    "name": { "type": "string" },
    "description": { "type": ["string", "null"] },
    "values": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/review" }
    }
  },
  "$defs": {
    "review": {
      "type": "object",
      "properties": {
        "description": { "type": ["string", "null"] },
        "severity": {
          "type": ["string", "null"],
          "enum": ["LOW", "MEDIUM", "HIGH", null]
        },
        "type": {
          "anyOf": [
            { "$ref": "#/$defs/valueType" },
            {
              "type": "array",
              "items": { "$ref": "#/$defs/valueType" }
            }
          ]
        }
      }
    },
    "valueType": {
      "type": ["string", "null"],
      "enum": [
        "CODE_CHANGE",
        "L2",
        "EXTERNAL",
        "RISK_PARAMETER",
        "PERMISSION",
        null
      ]
    }
  }
}
