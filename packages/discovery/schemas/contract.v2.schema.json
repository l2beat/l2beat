{
  "$id": "https://l2beat.com/contract.schema.json",
  "title": "Discovery contract config",
  "description": "Specific configuration for single contract discovery",
  "type": "object",
  "unevaluatedProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "extends": { "type": "string" },
    "canActIndependently": { "type": "boolean" },
    "ignoreDiscovery": { "type": "boolean" },
    "proxyType": { "type": "string" },
    "ignoreInWatchMode": {
      "type": "array",
      "items": { "type": "string" }
    },
    "ignoreMethods": {
      "type": "array",
      "items": { "type": "string" }
    },
    "ignoreRelatives": {
      "type": "array",
      "items": { "type": "string" }
    },
    "fields": {
      "type": "object",
      "unevaluatedProperties": false,
      "patternProperties": {
        "^.+$": {
          "type": "object",
          "unevaluatedProperties": false,
          "properties": {
            "description": { "type": ["string", "null"] },
            "returnType": { "type": ["string", "null"] },
            "severity": { "$ref": "severity.schema.json" },
            "type": {
              "anyOf": [
                { "$ref": "#/$defs/valueType" },
                {
                  "type": "array",
                  "items": { "$ref": "#/$defs/valueType" }
                }
              ]
            },
            "target": { "$ref": "#/$defs/targetConfig" },
            "handler": {
              "^.+$": {
                "type": "object",
                "required": ["type"],
                "properties": {
                  "type": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "description": {
      "description": "Description for the contract",
      "type": "string"
    },
    "displayName": {
      "description": "Name that will be displayed instead of the derived smart contract name",
      "type": "string"
    },
    "methods": {
      "type": "object",
      "description": "Key-Value store for description <Method>: <Description>",
      "unevaluatedProperties": false,
      "patternProperties": {
        "^.+$": {
          "type": "string"
        }
      }
    }
  },
  "$defs": {
    "valueType": {
      "type": ["string", "null"],
      "enum": [
        "CODE_CHANGE",
        "L2",
        "EXTERNAL",
        "RISK_PARAMETER",
        "PERMISSION",
        null
      ]
    },
    "permission": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "propose",
            "challenge",
            "validate",
            "sequence",
            "guard",
            "fastconfirm",
            "configure",
            "upgrade",
            "act"
          ]
        },
        "delay": {
          "type": "integer",
          "minimum": 0
        },
        "description": { "type:": ["string", "null"] }
      }
    },
    "stackCategory": {
      "type": ["string", "null"],
      "enum": ["Core", "Gateways&Escrows", "Upgrades&Governance"]
    },
    "targetConfig": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "description": { "type": ["string", "null"] },
        "template": { "type": ["string", "null"] },
        "category": {
          "anyOf": [
            { "$ref": "#/$defs/stackCategory" },
            {
              "type": "array",
              "items": { "$ref": "#/$defs/stackCategory" }
            }
          ]
        },
        "permissions": {
          "type": "array",
          "items": { "$ref": "#/$defs/permission" }
        }
      }
    }
  }
}
