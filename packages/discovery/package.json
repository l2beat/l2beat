{
  "name": "@l2beat/discovery",
  "description": "L2Beat discovery - engine & tooling utilized for keeping an eye on L2s",
  "version": "0.48.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "discovery": "./cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:dependencies": "cd ../.. && pnpm build:dependencies:discovery",
    "watch:dependencies": "cd ../.. && pnpm watch:dependencies:discovery",
    "clean": "rm -rf dist",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint:fix": "biome check --formatter-enabled=false --write .",
    "lint": "biome check --formatter-enabled=false .",
    "test": "mocha",
    "typecheck": "tsc --noEmit",
    "generate-schemas": "node -r esbuild-register src/cli.ts generate-schemas"
  },
  "dependencies": {
    "@l2beat/backend-tools": "workspace:*",
    "@l2beat/validate": "workspace:*",
    "@l2beat/shared": "workspace:*",
    "@l2beat/shared-pure": "workspace:*",
    "@mradomski/fast-solidity-parser": "0.1.6",
    "bignumber.js": "^9.1.2",
    "chalk": "^4.1.2",
    "clingo-wasm": "0.3.2",
    "cmd-ts": "^0.13.0",
    "ethers": "^5.7.2",
    "jsonc-parser": "^3.2.0",
    "lodash": "^4.17.21",
    "lru_map": "0.4.1",
    "mkdirp": "^3.0.0",
    "node-fetch": "^2.6.7",
    "ohm-js": "^17.1.0",
    "rimraf": "^5.0.0",
    "sqlite3": "5.1.7"
  },
  "devDependencies": {
    "@l2beat/typescript-config": "workspace:*",
    "@types/lodash": "^4.14.198",
    "@types/mock-fs": "^4.13.4",
    "@types/node-fetch": "^2.6.4",
    "mock-fs": "^5.2.0"
  }
}
