{
  "name": "@l2beat/discovery",
  "description": "L2Beat discovery - engine & tooling utilized for keeping an eye on L2s",
  "version": "0.48.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "discovery": "./cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:dependencies": "cd ../.. && pnpm build:dependencies",
    "clean": "rm -rf dist",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint:fix": "biome check --formatter-enabled=false --write .",
    "lint": "biome check --formatter-enabled=false .",
    "test": "mocha",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@l2beat/backend-tools": "workspace:*",
    "@l2beat/discovery-types": "workspace:*",
    "@l2beat/shared": "workspace:*",
    "@l2beat/shared-pure": "workspace:*",
    "@mradomski/fast-solidity-parser": "0.1.1",
    "bignumber.js": "^9.1.2",
    "chalk": "^4.1.2",
    "cmd-ts": "^0.13.0",
    "deep-diff": "^1.0.2",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "jsonc-parser": "^3.2.0",
    "lodash": "^4.17.21",
    "mkdirp": "^3.0.0",
    "node-fetch": "^2.6.7",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.0",
    "sqlite3": "^5.1.6",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/deep-diff": "^1.0.2",
    "@types/lodash": "^4.14.198",
    "@types/node-fetch": "^2.6.4"
  }
}
