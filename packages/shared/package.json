{
  "name": "@l2beat/shared",
  "version": "0.1.0",
  "private": true,
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "default": "./build/index.js"
    },
    "./uops": {
      "types": "./build/index-uops.d.ts",
      "default": "./build/index-uops.js"
    },
    "./frontend": {
      "types": "./build/index-fe.d.ts",
      "default": "./build/index-fe.js"
    }
  },
  "typesVersions": {
    "*": {
      "uops": [
        "./build/index-uops.d.ts"
      ],
      "frontend": [
        "./build/index-fe.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf build",
    "format:fix": "biome format --write .",
    "format": "biome format .",
    "lint:fix": "biome check --formatter-enabled=false --write .",
    "lint": "biome check --formatter-enabled=false .",
    "test": "mocha",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@l2beat/backend-tools": "workspace:*",
    "@l2beat/shared-pure": "workspace:*",
    "@l2beat/validate": "workspace:*",
    "@polkadot/api": "^12.4.2",
    "ethers": "^5.7.2",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.7",
    "stream-chain": "^2.2.5",
    "stream-json": "^1.8.0",
    "uuid": "^11.0.2",
    "viem": "^2.21.36"
  },
  "devDependencies": {
    "@l2beat/typescript-config": "workspace:*",
    "@types/lodash": "^4.17.12",
    "@types/node-fetch": "^2.6.2",
    "@types/stream-chain": "^2.1.0",
    "@types/stream-json": "^1.7.7",
    "nock": "^13.5.5"
  }
}
