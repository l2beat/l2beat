{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "tsconfig.json"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build",
        "^db:generate"
      ],
      "outputs": [
        "build/**",
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ]
    },
    "db:generate": {
      "outputs": [
        "src/kysely/generated/**"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "**/*.ts",
        "**/*.tsx"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "**/*.ts",
        "**/*.test.ts",
        "**/*.json",
        "**/*.jsonc"
      ]
    },
    "lint": {
      "dependsOn": [
        "^build"
      ]
    },
    "format": {},
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}