{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["**/*.ts", "**/*.tsx"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["**/*.ts", "**/*.test.ts"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "format": {},
    "clean": {
      "cache": false
    }
  }
}
