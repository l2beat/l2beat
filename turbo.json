{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "pipeline": {
    "ci:check": {
      "dependsOn": ["lint", "format", "typecheck", "test", "build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "**/*.test.ts"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "format": {},
    "clean": {
      "cache": false
    }
  }
}
